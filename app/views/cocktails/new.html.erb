<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1>New Cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, placeholder: "Spritz" %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>