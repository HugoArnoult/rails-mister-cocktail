<div class="main-container">

  <div class="left-container">
    <div class="navbar-container">
      <%= link_to root_path do %>
        <%= image_tag "logo.jpg", alt: "Nikki Beach", id: "img-logo" %>
      <% end %>
      <%= link_to "Create", new_cocktail_path, class: "primary-button" %>
    </div>

    <div class="content-container">
        <%= image_tag "cocktail_amaretto.png" %>
        <div class="home-content">
          <h1>Amaretto</h1>
          <p>
            Ce cocktail a été créé en Italie dans les années 1950 – comme le Old Fashioned - mais c'est vraiment 10 ans plus tard qu'il serait devenu à la mode, dans les bars américains.
          </p>
          <%= link_to 'Know more', cocktail_path(@cocktails.find(14)), class: "primary-button" %>
        </div>
    </div>
  </div>

  <div class="right-container">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <%= link_to cocktail_path(cocktail) do %>
          <%= cl_image_tag cocktail.photo.key, height: 300 %>
          <p><%= cocktail.name %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
